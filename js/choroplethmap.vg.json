{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Percentage of Wild Animal Trade Imports in 2016",
    "width": 1000,
    "height": 800,
    "config":{"background":"#ffffff"},
    "projection": {"type": "equirectangular"},
    "data": {
        "url": "https://raw.githubusercontent.com/msavMonash/Week9Homework/master/js/worldMap.geo.json" ,
        "format": {"type": "topojson", "feature": "importHigh.topojson"}
        },
    "transform": [
        {
        "lookup": "properties.name",
        "from": {
            "data": {
                "url": "https://raw.githubusercontent.com/msavMonash/Week9Homework/master/data/ImportCaptiveWild.csv"
                    },
        "key": "Country",
        "fields": ["Country","Captive","Wild","Total"]
                }
   
        },
        {"calculate":"datum.Captive / datum.Total * 100", "as":"%Captive"},
        {"calculate":"datum.Wild / datum.Total * 100", "as":"%Wild"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": { 
        "field": "%Wild",
        "title": "Percentage of Wild",
        "type": "quantitative",
        "scale": {"type": "threshold", "domain":[20,40,60,80],
        "range":["#08b3e5","#84dffb","#d9d9d9","#80ff86","#00ab08"]}
        },
   
    "tooltip": [
    {"field": "properties.name", "type": "nominal", "title": "Country"},
    {"field": "%Captive", "type": "quantitative", "title": "Captive %","format":".0f"},
    {"field": "%Wild", "type": "quantitative", "title": "Wild %","format":".0f"}
    ]
   
    }
   
   }